model Work {
  id   Int     @id @default(autoincrement())
  type String? @default("")
  link String  @default("")

  artist    Artist    @relation(fields: [artistID], references: [id], onDelete: Cascade)
  artistID  Int       
}

model Link {
  id        Int       @id @default(autoincrement())
  label     String?   @default("")
  url       String    @default("")

  artist    Artist    @relation(fields: [artistID], references: [id], onDelete: Cascade)
  artistID  Int       
}

